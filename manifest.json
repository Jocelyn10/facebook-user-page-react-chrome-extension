{
  "manifest_version": 2,
  "name": "Facebook User Page React Chrome Extension",
  "description": "Chrome Extension to get post user reactions",
  "version": "0.1.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  }
}
